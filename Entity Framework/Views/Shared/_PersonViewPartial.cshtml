@using Entity_Framework.Models;
@model Person

            <div class="@Model.RowClass row">
                <div class="col-lg-1">@(Model.ItemIndex + 1)</div>
                <div class="col-lg-4">@Model.Name</div>
                <div class="col-lg-3">@Model.City</div>
                <div class="col-lg-3">@Model.PhoneNumber</div>
                <div class="col-lg-1">
                    @switch (Model.Column5Mode)
                    {
                        default:
                        case Column5Modes.RemoveLink:
                            <a href="/Home/DeletePerson?id=@Model.ID">Remove</a>
                            break;
                        case Column5Modes.DisplayID:
                            <span>@Model.ID</span>
                            break;
                    }
                </div>
            </div>
